<style>
  .subtitle {
    padding-top: 3em;
    display: flex;
    justify-content: space-between;
  }

  h1 {
    background-color: whitesmoke;
    width: 10em;
    height: 2em;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  li {
    text-align: right;
  }

  li a {
    display: block;
    color: black;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }
