<style>
* {
  box-sizing: border-box;
}

.column {
  float: left;
  width: 50%;
  padding: 20px;
}

.row:after {
  content: "";
  display: table;
  clear: both;
}

#p0 {
  text-indent: 2em;
}

table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
  padding: 5px;
}

tr:nth-child(even) {
  background-color: #D6EEEE;
}
</style>
<body>
  <%= render partial: "shared/header", locals: { subtitle: "#{@merchant.name}'s Shop" } %>
  <h3 style="text-align:center;background-color:whitesmoke;border-top-style:solid">Edit Discount # <%= @discount.id %></h3>
  <div class="row">
    <div class="column">
      <div id="discount-edit-form-<%= @merchant.id %>">
        <%= form_with url: merchant_discount_path(@merchant.id, @discount.id), method: :put, local: true do |form| %>
          <%= form.hidden_field :merchant_id, value: @merchant.id %><br>
          <%= form.label :quantity_threshold, "Item Threshold:" %><br>
          <%= form.text_field :quantity_threshold, value: @discount.quantity_threshold %><br>
          <%= form.label :percentage_discount, "Discount:" %><br>
          <%= form.text_field :percentage_discount, value: @discount.percentage_discount %><br>
          <%= form.submit "Submit" %>
        <% end %>
      </div>
    </div>
  </div>
</body>