<style>
* {
  box-sizing: border-box;
}

.column {
  float: left;
  width: 50%;
  padding: 20px;
}

.row:after {
  content: "";
  display: table;
  clear: both;
}

#p0 {
  text-indent: 2em;
}

table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
  padding: 5px;
}

tr:nth-child(even) {
  background-color: #D6EEEE;
}
</style>
<body>
  <%= render partial: "shared/header", locals: { subtitle: "#{@merchant.name}'s Shop" } %>
  <h3 style="text-align:center;background-color:whitesmoke;border-top-style:solid">Invoice # <%= @invoice.id %></h3>
  <div class="row">
    <div class="column">
      <div id="invoice-stats-<%= @invoice.id %>">
          <h4><%= "Status: #{@invoice.status}" %></h4>
          <h4><%= "Created on: #{@invoice.created_at.strftime("%A, %d %B %Y")}" %></h4>
          <h4><%= "Total Revenue: $#{sprintf('%.2f', @invoice.total_revenue(@merchant))}" %></h4>
      </div>
      <div id="customer-info-<%= @invoice.id %>">
          <h4> Customer: </h4>
          <p id="p0"><%= "#{@invoice.customer_first} #{@invoice.customer_last}" %></p>
      </div>
      <div id="item-info-<%= @invoice.id %>">
        <h4> Items on Invoice: </h4>
        <table>
          <tr>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Discounted Price</th>
            <th>Discount Link</th>
            <th>Status</th>
          </tr>
          <% discounted_revenue = 0.0 %>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.invoice_item_quantity(@invoice.id) %></td>
              <td><%= "$" + sprintf('%.2f', item.unit_price) %></td>
              <td>
                <% if @discounts != [] %>
                  <%= "$" + sprintf('%.2f', item.discounted_price(@discounts, @invoice.id)) %><% discounted_revenue += item.discounted_price(@discounts, @invoice.id) * item.invoice_item_quantity(@invoice.id) %>
                <% else %>
                  <%= "N/A" %><% discounted_revenue += item.unit_price * item.invoice_item_quantity(@invoice.id) %>
                <% end %>
              </td>
              <td>
                <% item_discount = item.best_discount(@discounts, @invoice.id) %>
                <% if item_discount != nil %>
                  <%= link_to "Discount # #{item_discount.id}", merchant_discount_path(@merchant.id, item_discount.id) %>
                <% else %>
                  <%= "N/A" %>
                <% end %>
              </td>
              <td>
                <%= form_with model: item.invoice_item_by(@invoice.id), id: "form-#{item.id}", local: true do |form| %>
                  <%= form.select :status, ["packaged", "pending", "shipped"], value: "#{item.invoice_item_by(@invoice.id).status}" %>
                  <%= form.hidden_field :invoice_id, value: @invoice.id %>
                  <%= form.hidden_field :merchant_id, value: @merchant.id %>
                  <%= form.submit 'Update Item Status' %>
                <% end %>
              </td>
            </tr>
          <% end %>
          <% if discounted_revenue != @invoice.total_revenue(@merchant) %>
            <h4> Revenue After Discount: <%= "$" + sprintf('%.2f', discounted_revenue) %></h4>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</body>